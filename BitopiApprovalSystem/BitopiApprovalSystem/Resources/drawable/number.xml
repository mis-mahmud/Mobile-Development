<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:bottom="2dp" android:right="2dp">
    <shape  android:shape="rectangle" >
      <corners android:radius="50dp"/>
      <gradient
      android:angle="90"
      android:startColor="#d50000"
      android:endColor="#e57373"
      android:type="linear"/>
      <padding
      android:left="0dp"
      android:top="0dp"
      android:right="0dp"
      android:bottom="0dp"/>
      <size
      android:width="270dp"
      android:height="60dp"/>
    </shape>
  </item>

 <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#239DFF" />
    </shape>
  </item>
  </selector>