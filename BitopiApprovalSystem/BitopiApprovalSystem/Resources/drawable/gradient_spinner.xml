<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <layer-list>
      <item>
        <shape>
          <gradient android:angle="90" android:endColor="#f1f1f1" android:startColor="#f1f1f1" android:type="linear" />

          <stroke android:width="1dp" android:color="#5B8480" />

          <corners android:radius="4dp" />

          <padding android:bottom="15dp" android:left="5dp" android:right="7dp" android:top="9dp" />
        </shape>
      </item>
      <item >
        <bitmap android:gravity="bottom|right" android:src="@drawable/spinner_arrow" />
      </item>
    </layer-list>
  </item>

</selector>
