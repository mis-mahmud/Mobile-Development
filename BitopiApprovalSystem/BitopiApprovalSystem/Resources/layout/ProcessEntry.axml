    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tvLocation"
            android:text="None"
            android:fontFamily="sans-serif-thin"
            android:textColor="#111"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:typeface="serif" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlPRType"
            android:layout_below="@+id/tvLocation">
            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnRunning"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button_reject"
                android:text="Running"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnAll"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_button_recommend"
                android:text="All"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/btnRunning" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlRecent"
            android:layout_below="@+id/rlPRType"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:backgroundTint="#ff026292"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_textview_bgcolor"
            android:padding="2dp">
            <Button
                android:id="@+id/recent1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dotted"
                android:layout_marginRight="5dp"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:hint="Recent1" />
            <Button
                android:id="@+id/recent2"
                android:layout_toRightOf="@+id/recent1"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:background="@drawable/dotted"
                android:layout_marginRight="5dp"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:hint="Recent 2"
                android:width="70dp" />
            <Button
                android:id="@+id/recent3"
                android:layout_toRightOf="@+id/recent2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dotted"
                android:layout_marginRight="5dp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:hint="Recent3" />
            <Button
                android:id="@+id/recent4"
                android:layout_toRightOf="@+id/recent3"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:background="@drawable/dotted"
                android:layout_marginRight="5dp"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:hint="Recent 4" />
            <Button
                android:id="@+id/recent5"
                android:layout_toRightOf="@+id/recent4"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:background="@drawable/dotted"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:hint="Recent 5" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/rlTop"
            android:layout_below="@id/rlRecent">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:id="@+id/rlLocation"
                android:background="@drawable/rounded_textview_bgcolor"
                android:layout_marginTop="5dp"
                android:backgroundTint="#ff026292"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:paddingBottom="0dp"
                android:focusableInTouchMode="true">
                <TextView
                    android:text="Reference"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:id="@+id/lblLocation"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="13sp" />
                <AutoCompleteTextView
                    android:layout_height="60dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/atvReference"
                    android:layout_below="@+id/lblLocation"
                    android:textColor="#fff"
                    android:nextFocusUp="@id/atvReference"
                    android:nextFocusLeft="@id/atvReference"
                    android:textSize="12sp"
                    android:hint="Please Select Reference " />
            <!--android:background="@drawable/gradient_spinner"-->
            </RelativeLayout>
        <!--<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/rlProdRef"
            android:background="@drawable/rounded_textview"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:backgroundTint="#ff026292"
            android:layout_toRightOf="@id/rlLocation"
            tools:visibility="gone">
            <TextView
                android:text="Prod Ref"
                android:layout_height="wrap_content"
