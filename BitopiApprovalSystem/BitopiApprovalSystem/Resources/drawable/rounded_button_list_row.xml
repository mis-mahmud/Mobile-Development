<selector xmlns:android="http://schemas.android.com/apk/res/android">


  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#307D3D" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item android:bottom="2dp" android:right="2dp">
    <shape>
      <!--<gradient android:angle="270"
              android:endColor="#499E55" android:startColor="#307D3D" />-->
      <gradient android:angle="270"
          android:endColor="#5c6bc0" android:startColor="#5c6bc0" />
      <!--<stroke android:width="1dp" android:color="#006675" />-->
      <corners android:radius="6dp" />
      <padding android:bottom="0dp" android:left="0dp"
          android:right="0dp" android:top="0dp" />
    </shape>
  </item>



</selector>