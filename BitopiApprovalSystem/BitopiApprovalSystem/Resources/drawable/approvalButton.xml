<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:bottom="2dp" android:right="2dp">
    <shape  android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <gradient
      android:angle="90"
      android:startColor="#1768A8"
      android:endColor="#239DFF"
      android:type="linear"/>
      <padding
      android:left="0dp"
      android:top="0dp"
      android:right="0dp"
      android:bottom="0dp"/>
      <size
      android:width="270dp"
      android:height="60dp"/>
    </shape>
  </item>

 <item android:state_pressed="true" >
   <shape>
      <!--<gradient android:angle="270"
              android:endColor="#499E55" android:startColor="#307D3D" />-->
      <gradient android:angle="270"
          android:endColor="#1768A8" android:startColor="#239DFF" />
      <!--<stroke android:width="1dp" android:color="#006675" />-->
      <corners android:radius="6dp" />
      <padding android:bottom="10dp" android:left="10dp"
          android:right="10dp" android:top="10dp" />
    </shape>
  </item>
  </selector>